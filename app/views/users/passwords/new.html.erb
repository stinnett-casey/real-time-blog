<%= render 'layouts/navbar' %>

<div class="row">
  <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-10 offset-1">
    <div class="card mx-xl-5 mt-5">
      <div class="card-body">
        <!--Header-->
        <div class="form-header deep-blue-gradient rounded">
            <h3><i class="fa fa-lock"></i>Forgot Password?</h3>
        </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-row">
            <!-- Material input email -->
            <div class="md-form font-weight-light col-12">
                <i class="fa fa-envelope prefix grey-text"></i>
                <%= f.email_field :email, id: 'email', class: 'form-control' %>
                <%= f.label :email, 'Your Email' %>
            </div>
          </div>
          <div class="text-center mt-4">
            <%= f.submit "Send Link", class: 'btn btn-light-blue waves-effect waves-light' %>
          </div>
        <% end %>
      </div>
      <!--Footer-->
      <div class="modal-footer">
        <div class="options font-weight-light">
          <%= link_to "Sign up", root_path %><br />
        </div>
      </div>
    </div>
  </div>
</div>